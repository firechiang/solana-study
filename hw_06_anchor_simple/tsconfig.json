// TypeScript 相关配置
{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "baseUrl": ".",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./tests/**/*"
  ]
}
